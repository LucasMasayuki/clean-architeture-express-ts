{
    "testPathIgnorePatterns": ["<rootDir>/node_modules/"],
    "bail": 1,
    "clearMocks": true,
    "collectCoverage": false,
    "collectCoverageFrom": ["src/**/*.ts"],
    "coverageReporters": ["lcov", "text"],
    "moduleNameMapper": {
      "@/tests/(.*)": "<rootDir>/tests/$1",
      "@/(.*)": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "preset": "ts-jest",
    "testEnvironment": "node"
}
