{
  "name": "clean-architeture-express-ts",
  "version": "0.1.0",
  "description": "Template to clean architeture express typescript app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LucasMasayuki/clean-architeture-express-ts.git"
  },
  "keywords": [
    "TypeScript",
    "express",
    "nodejs",
    "jest",
    "eslint"
  ],
  "author": "Lucas Masayuki",
  "main": "dist/server.js",
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig-build.json",
    "up": "npm run build && docker-compose up -d",
    "down": "docker-compose down",
    "build:watch": "rimraf dist && tsc -p tsconfig-build.json -w",
    "check": "npm-check -s -u",
    "dev": "npm run build && nodemon",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts tests/**/*.ts --fix",
    "pre-commit": "lint-staged",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ./ormconfig.js",
    "test": "node --expose-gc ./node_modules/.bin/jest --runInBand --logHeapUsage",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info"
  },
  "dependencies": {
    "apollo-server-express": "^2.25.2",
    "bcrypt": "^5.0.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~4.3.1",
    "dotenv": "^10.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "express": "~4.17.0",
    "graphql": "^15.5.0",
    "helmet": "^4.6.0",
    "http-errors": "~1.8.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongodb": "^3.6.6",
    "morgan": "~1.10.0",
    "mssql": "^7.2.1",
    "nodemon": "^2.0.12",
    "pg": "^8.7.1",
    "sha256": "^0.2.0",
    "ts-node": "^10.1.0",
    "typeorm": "^0.2.37",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.8",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/module-alias": "^2.0.1",
    "@types/mongodb": "^3.6.10",
    "@types/morgan": "^1.9.2",
    "@types/mssql": "^7.1.3",
    "@types/node": "^16.9.1",
    "@types/sha256": "^0.2.0",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "apollo-server-integration-testing": "^3.0.0",
    "eslint": "^7.30.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "faker": "^5.5.3",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "mockdate": "^3.0.5",
    "rimraf": "^3.0.2",
    "superagent": "^6.1.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "tsconfig-paths": "^3.11.0",
    "typescript": "4.4.2"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
